{
	"name": "dataflow_test",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SourceCSVFile",
						"type": "DatasetReference"
					},
					"name": "SourceCSVFile"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "FilterActives"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmpId as short,",
				"          Name as string,",
				"          Designation as string,",
				"          Salary as integer,",
				"          IsActive as boolean",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceCSVFile",
				"SourceCSVFile filter(ERROR_FUNCTION('')) ~> FilterActives"
			]
		}
	}
}